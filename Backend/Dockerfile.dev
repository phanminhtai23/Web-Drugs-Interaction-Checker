FROM node:18-alpine

# Install nodemon globally
RUN npm install -g nodemon

WORKDIR /app

# Copy package files
COPY package*.json ./
RUN npm install

# Copy source code
COPY . .

# Expose port and debug port
EXPOSE 5000 9229

# Start with nodemon for hot reload and debug
CMD ["nodemon", "--inspect=0.0.0.0:9229", "index.js"]
